<div class='form_style with_margin'>
  <div class="page-header">
    <%= link_to root_path, :class => 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
    <% end %>
    <h1>New Coach Session</h1>
  </div>

  <%= form_for(@room, :html => { :class => "form-horizontal" }) do |f| %>
    <% if @room.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h4><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h4>

        <ul>
        <% @room.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :public, :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.check_box :public, class: 'form-control' %><br/>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
