<%= form_for(@user, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_digest, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :password_digest, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :auth_token, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :auth_token, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :auth_token_expires_at, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.datetime_select :auth_token_expires_at, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_reset_token, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :password_reset_token, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_reset_expires_at, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.datetime_select :password_reset_expires_at, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :timezone, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :timezone, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
